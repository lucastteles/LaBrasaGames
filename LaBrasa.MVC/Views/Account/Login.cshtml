@model LaBrasa.MVC.ViewModels.LoginViewModel



<body class="login-page">

<div class="main-login">
    <div class="left-login">
        <h1>Faça Login<br> <font color="white">E entre para o nosso time</font></h1>
        <br />
        <img src="~/images/logobranco-1.png" class="left-login-image">
    </div>
    <div class="right-login">
        <div class="card-login">
            <div class="col-md-10">
                <center><h1>LOGIN</h1></center>
                
                <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal">

                    <input type="hidden" asp-for="ReturnUrl" />

                    <div asp-validation-summary="All" class="text-danger">
                    </div>

                    <div class="text-field">
                        <label for="Email" >Email</label>
                       
                            
                                <input asp-for="Email" name="Email" placeholder="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            
                        
                    </div>

                    <div class="text-field">
                        @*Nome em cima do fomulário*@
                        <label for="Password" >Senha</label>
                        
                            
                                <input asp-for="Password" name="Password" placeholder="Senha" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            
                        
                    </div>


                    
                        <div class="form-group">
                            
                                <button type="submit" class="btn-login">Login</button>
                            
                        </div>
                    
                    <center><h4><<p>
                        <a asp-action="Register">Cadastre-se agora</a>
                    </p></h4>
                    </center>
                </form>
               
            </div>
        </div>
    </div>
</div>

</body>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}