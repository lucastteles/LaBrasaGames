@model Labrasa.Application.DTOs.UsuarioDTO

<html>
<head>
    <meta charset="UTF-8">
    <title>Site do Prof. Miltin</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="">
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@400;700&amp;display=swap" rel="stylesheet">
    <style type="text/css" title="MeuEstilo" media="all">

        * {
            font-family: 'Ubuntu', sans-serif;
        }

        body {
            background-color: #fff;
            text-align: center;
            margin: 25px;
        }

        .container {
            background-color: #1C1C1C;
            padding: 15px;
            text-align: center;
        }

        h1 {
            color: #FF8F1B;
        }

        h2 {
            color: #FF8F1B;
            font-size: 14px;
        }



        img.rounded-circle {
            width: 200px;
            border-radius: 10%;
            filter: grayscale(1);
            transition: 0.5s;
        }

        .detalhes-left {
            padding: 30px;
            margin: 30px;
            text-align: left;
            -webkit-column-count: 3; /* Chrome, Safari, Opera */
            -moz-column-count: 3; /* Firefox */
            column-count: 3;
        }

        /*.detalhes-right {
            margin: 30px;
            -webkit-column-count: 3; /* Chrome, Safari, Opera */
/*            -moz-column-count: 3;*/ /* Firefox */
            /*column-count: 3;
        }*//**/

        .negrito {
            font-weight: 700;
            color: white;
        }

            .negrito > p {
                color: white;
                font-weight: 400;
            }

    </style>

</head>

<body>
    <div class="container">
        <h1> Perfil </h1>
        <img class="rounded-circle" src="~/Images/icons8-usuário-64 (2).png"  alt="Avatar">



        <div class="detalhes-left">
            <h2>Informções Pessoais</h2>
            
            <span class="negrito">Nome: @Html.DisplayFor(model => model.Nome) @Html.DisplayFor(model => model.Sobrenome) </span> 
            <br />
            <span class="negrito">Idade: @Html.DisplayFor(model => model.Idade)</span> 
            <br />
            <span class="negrito">Endereço: @Html.DisplayFor(model => model.Endereco)</span>
            <br />
            <span class="negrito">Genero: @Html.DisplayFor(model => model.Genero)</span> 
   
        </div>
    </div>


    <!--Experimente por um filtro para deixar a imagem preto
    e branca filter: grayscale(1); -->

</body>
</html>